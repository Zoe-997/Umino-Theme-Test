<div class="page-width pr_center row content-form">
  <div class="grid col-xs-12 col-sm-12 col-md-5 col-lg-5">
    <div class="grid__item medium-up--one-half medium-up--push-one-quarter">
      <div class="section-header">
        <div class="form-vertical">
          {% form 'reset_customer_password' %}

            <h1 class="text-center">{{ 'customer.reset_password.title' | t }}</h1>

            <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

            {{ form.errors | default_errors }}
			<div class="box-label">
            <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
            <input class="input-info" type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">
          	</div>
          	<div class="box-label">
            <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input class="input-info" type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
          	</div>	
          	<div class="group-button">
            	<input type="submit" class="button submit" value="{{ 'customer.reset_password.submit' | t }}">
            </div>  
          {% endform %}
        </div>

      </div>
    </div>
  </div>
</div>
