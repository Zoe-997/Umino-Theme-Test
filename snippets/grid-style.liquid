{% capture configScreen %}
    1921=>visible, 
    1920=>widescreen, 
    1480=>desktop, 
    1200=>laptop, 
    992=>notebook, 
    768=>tablet, 
    576=>landscape, 
    481=>portrait, 
    361=>mobile, 
    1=>mobile-small 
{% endcapture %}
{%  assign selector = '#shopify-section-' | append: section.id | append:' #collection-product .product-item,#product-grid .product-item' %}
{%  assign configScreen = configScreen | strip_newlines | replace: " ", "" | split: "," | reverse %}
{%  assign padding_lr = settings['padding_lr'] %}
{%  assign gridStyle = selector | append: '{ float: left }'  %}
{%  assign i = 1  %}
{%  assign tmp = 1  %}
{% for cfg in configScreen %}
    {% assign size = cfg | split: '=>' | first | strip %}
    {% assign name = cfg  | split: '=>' | last | strip %}
    {% assign col = settings[name] %}
    {% if forloop.last == true %}
        {% assign width = '100%' %}
        {% capture gridStyle %}{{gridStyle}} @media (min-width: {{ tmp }}px) {  {{ selector }} { padding-left:{{ padding_lr }}px;padding-right:{{ padding_lr }}px; padding-bottom:{{padding_lr | plus: padding_lr}}px;  width: calc(100% / {{ col }}); } {{ selector }}:nth-child({{ col }}n+1){clear: left;}}{% endcapture %}
    {% elsif i > 1 %}
        {% capture gridStyle %}{{gridStyle}} @media (min-width: {{ tmp }}px) and (max-width: {{ size | minus: 1 }}px) { {{ selector }} {padding-left:{{ padding_lr }}px;padding-right:{{ padding_lr }}px; padding-bottom:{{padding_lr | plus: padding_lr}}px; width: calc(100% / {{ col }});} {{ selector }}:nth-child({{ col }}n+1){clear: left;}}{% endcapture %}
    {% endif %}
    {%  assign i = i | plus: 1  %}
    {%  assign tmp = size  %}
{% endfor %}
{% capture gridStyle %}{{gridStyle}} {{gridStyle | replace: "#shopify-section", ".rtl #shopify-section" | replace: " left", " right" | replace: ":left", ":right"}}{% endcapture %}
{% capture gridStyle %}<style id='grid-style'>{{gridStyle}} #collection-product,#product-grid {margin-left: -{{ padding_lr }}px; margin-right: -{{ padding_lr }}px;}</style>{% endcapture %}
{{ gridStyle }}
{% comment %}
Use in section:  
    {% render 'grid-style', settings:section.settings %}
Use in block in section:  
    {% render 'grid-style', settings:block.settings %}
{% endcomment %}
