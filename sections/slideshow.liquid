{%- if section.settings.hidden %}{% break %}{% endif -%}	
<link rel="preconnect" href=" {{ 'slideshow.css' | asset_url}}" crossorigin>
<link rel="preload" as="style" href="{{ 'slideshow.css' | asset_url}}">
{{ 'slideshow.css' | asset_url | stylesheet_tag }}
{% assign sid = section.id %}
{% assign style_dots = section.settings.style_dots %}
{% assign position_dots = section.settings.position_dots %}
{% liquid 
        assign section_blocks = section.blocks  
    	assign size = "1920x890"
    	assign no-img = "https://via.placeholder.com/1920x740.png/f5f5f5"
    	assign index = 1 
        assign arr_blocks_img = section_blocks | where: "type", 'img'
        assign use_custom_h = section.settings.use_custom_h
        assign h_des = section.settings.h_des
        assign h_tb = section.settings.h_tb
        assign h_mb = section.settings.h_mb
%}
        
<section id="laber_{{sid}}" class="laber_slidershow_{{sid}}">
<div data-wrapper-slidershow class="{{section.settings.layout}}">
  <div class="laberSlidershow">
  {% include 'grid-slider', settings:section.settings %}
  <div class="grid-slider js_carousel vertical-center {% if section.settings.fade_zoom %}fade_zoom{%endif%}"
     {{gridSlider}}
     data-append-Dots=".appendDots"
  	>
       {% if arr_blocks_img.size > 0 %}  
    	{%- for block in arr_blocks_img -%}
    		{% if block.type == 'img' %} 
    			{% assign image = block.settings.image_sl %}
    			{% assign image_mobile = block.settings.image_sl_mobile %}
                {% assign image_center = block.settings.image_center %}
    			{% assign url = block.settings.link_img %}
    			{% assign open_link = block.settings.open_link %} 
                <div id="laber_bock_{{block.id}}" class="wrap_slide js_image_slide">
                  <div  class="content-item" {{ block.shopify_attributes }}>                  
                    {% assign ratio = image.aspect_ratio |default:1.0 %}
                    {% assign pd_top = 1 | divided_by: ratio | times: 100 %}
                    
                    {% assign ratio_mobile = image_mobile.aspect_ratio |default:1.0 %}
                    {% assign pd_top_mobile = 1 | divided_by: ratio_mobile | times: 100 %}
                     
                    {% if image != blank %}
                    <div class="lazyload laber_bg_lz pr_lazy_img image_pc" data-bgset="{{ image | img_url: '1x1' }}" data-ratio="{{ratio}}" data-sizes="auto" style="padding-top:{{pd_top}}%;" ></div>
                    <div class="lazyload laber_bg_lz pr_lazy_img image_mobile" data-bgset="{% if image_mobile != blank %}{{ image_mobile | img_url: '480x480' }}{% else %}{{ image | img_url: '1x1' }}{% endif %}" data-ratio="{{ratio_mobile}}" data-sizes="auto" style="padding-top:{% if image_mobile != blank %} {{pd_top_mobile}}%{% else %} {{ pd_top }}{% endif %};" ></div>
                    {%else%}
                    <div class="img-demo">  
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }} 
                    </div>  
                    {%endif%}
                    
                    {%- if block.settings.image_center != blank -%}
                      <div class="image-text ">
                      <div class="content-image wow">
                        {{ block.settings.image_center | image_url: width: 510 | image_tag }}
                      </div>
                      </div>
                    {%- endif -%}
                    <div class="container wrap_text">
                      <div class="wrapper_caption flex h_{{block.settings.h_position}} v_{{block.settings.v_position}} text_{{block.settings.txt_align}}">

                        <div class="caption" style="color:{{block.settings.cl_overlay}}; opacity:{{block.settings.cl_opacity | times:10 }}">
                          <div class="outner-caption">
                            <div class="inner-caption l-vertical">                            	
                              {% for block in section_blocks offset:index %}
                              {% assign index = index|plus:1 %}                            		
                              {%- case block.type -%}   
                                
                                {% when 'logo' %}
                                {% assign logo = block.settings.logo_img %}  
                                {% assign ratio_logo = logo.aspect_ratio |default:1.0 %}
                                {% assign pd_top_logo = 1 | divided_by: ratio_logo | times: 100 %}
                                <div id="b_{{block.id}}"  {{ block.shopify_attributes }}
                                style="display:inline-block;  
                                -webkit-animation-duration: {{block.settings.text_time}}s; 
                                  animation-duration: {{block.settings.text_time}}s; 
                                "
                                >
                                    <div class="logo_img" style="width:{{ logo.width}}px">
                                        <div class="lazyload " data-bgset="{% if logo != blank %}{{ logo | img_url: '1x1' }}{% else %}{{no-logo}}{% endif %}" data-ratio="{{ratio_logo}}" data-sizes="auto" style="padding-top:{% if image != blank %} {{pd_top_logo}}%{% else %} 100%{% endif %};" ></div>  
                                    </div>
                                </div>
                              {% when 'subhd' %}
                                <div id="b_{{block.id}}"  class="slide_item_h4 {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}
                                    style="    
                                         -webkit-animation-duration: {{block.settings.text_time}}s; 
                                         animation-duration: {{block.settings.text_time}}s; 
                                         
                                         "
                                    >
                                  {% assign somearray = block.settings.title | split: ' ' %}                             
                                  {% assign pos = block.settings.custom_mark %}
                                  {% assign index_mark  = 0 %}
                                  {% for item in somearray %}
                                  {% assign index_mark  = index_mark | plus: 1 %} 
                                    <span  class=" {{ index_mark }} {% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{item}} </span>
                                  {% endfor %}   
                                </div>
                              {% when 'hd' %}
                              <div id="b_{{block.id}}"  class="slide_item_h3 {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}
                                  >                             
                                {% assign somearray = block.settings.title | split: ' ' %} 
                                {% assign pos = block.settings.custom_mark %}
                                {% assign index_mark  = block.settings.text_time %}
                                {% assign text_time  = block.settings.text_time %}
                                {% for item in somearray %}
                                {% assign index_mark  = index_mark | plus: 1 %} 
                                {% assign text_time  = text_time | plus: 0.2 %}
                                	<span style="animation-delay: {{text_time}}s;"  class="wow  {% if block.settings.first_mark and forloop.first %}first {% endif %}{% if pos contains index_mark %}marked{% endif %}{% if block.settings.last_mark and forloop.last %}last {% endif %}" > {{item}} </span>
                                {% endfor %}                             
                              </div>
                              {% when 'txt' %}
                              <div id="b_{{block.id}}"  class="slide_item_p  {% if block.settings.hide_mobile %} hide_mobile{% endif %} {% if block.settings.hide %} d-none{% endif %}" {{ block.shopify_attributes }}
                                   style="    
                                         -webkit-animation-duration: {{block.settings.text_time}}s; 
                                         animation-duration: {{block.settings.text_time}}s; 
                                         
                                         "
                                   >{{block.settings.title}}</div> 
                              {% when 'btn' %}
                              {%- if  block.settings.title != blank -%}
                              	<a id="b_{{block.id}}" 
                                   class="buttons" href="{{block.settings.btn_link}}" 
                                   target="{{open_link}}" 
                                   {{ block.shopify_attributes }}
                                   style="    
                                         -webkit-animation-duration: {{block.settings.text_time}}s; 
                                         animation-duration: {{block.settings.text_time}}s; 
                                         
                                         "
                                   >{{block.settings.title}}</a>	
                              {%- endif -%}
                              {% when 'space' %}
                              <div id="b_{{block.id}}" class="slide_item_space {% if block.settings.hide_mobile %} hide_mobile{% endif %}" {{ block.shopify_attributes }}></div>
                              {% when 'box' %}
                              <div id="b_{{block.id}}"  class="slide_item_box" {{ block.shopify_attributes }}>    
                                <div class="inner-box">
                                  <div class="outside-box">
                                    <div class="inside-box">
                                      <h2>{{block.settings.title}}</h2>
                                      <p>{{block.settings.content}}</p>
                                      {%- if block.settings.btn_link != blank and block.settings.button_text != blank -%}
                                      	<a href="{{block.settings.btn_link}}">{{block.settings.button_text}}</a>
                                      {% endif %}
                                    </div>
                                  </div>
                                </div>
                              </div>

                              {% else %}                            				
                              {%- break -%}
                              {%- endcase -%}
                              {%- endfor -%}
                            </div> 
                          </div>
                        </div>   

                      </div>

                    </div>
                  </div> 
                </div>
    		{% endif %}
    	{% endfor %}
      {% endif %} 
    
    </div>
  {% if section.settings.dots %}
    <div class="wrapper-dots  {{style_dots}} position_{{position_dots}}">
      <div class="container">
      	<div class="appendDots"></div>
      </div>  
    </div>
  {% endif %}  
    </div>
</div>
</section>
{%- render 'section_style' -%}

{%- capture style-slideshow -%}
    {%- if use_custom_h == '1' -%}
        @media only screen and (min-width : 1024px){
          #laber_{{sid}} .pr_lazy_img {
              padding-top: {{h_des}} !important;
          }
        }
        @media only screen and (min-width : 768px) and (max-width : 1024px){
          #laber_{{sid}} .pr_lazy_img {
            padding-top: {{h_tb}} !important;
          }
        }
        
        @media only screen and (max-width : 767px){
          #laber_{{sid}} .pr_lazy_img {
            padding-top: {{ h_mb}} !important;
          }
        }
    {%- elsif use_custom_h == '2' -%}
        @media only screen and (min-width : 768px) and (max-width : 1024px){
          #laber_{{sid}} .pr_lazy_img {
            padding-top: {{ h_tb}} !important;
          }
        }
        @media only screen and (max-width : 767px){
            #laber_{{sid}} .pr_lazy_img {
              padding-top: {{ h_mb}} !important;
            }
          }
      {% else %}
        @media only screen and (max-width : 767px){
            #laber_{{sid}} .pr_lazy_img {
              padding-top: {{ h_mb}} !important;
            }
          }
    {% endif %}  
  {%- if section_blocks.size > 0 %}
        {%- for block in section_blocks -%}
        {%- assign id = block.id -%}
        {%- assign type = block.type -%}
            {%- case block.type -%} 
					{% when 'subhd' %}
                      .wrapper_caption #b_{{id}}.slide_item_h4{
                        text-transform:{{block.settings.text_transform}}; 
						font-style: {{block.settings.font_style}};
                        letter-spacing:{{block.settings.ls_text}};
                        {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                        font-size:{{block.settings.fs_text}}px; 
                        color:{{block.settings.color}}; 
                        font-weight:{{block.settings.fw_text}}; 
                      }
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_h4{
							font-size:{{block.settings.mobile_font_text}}px;
							{% if block.settings.mobile_lh_text >0 %}line-height:{{block.settings.mobile_lh_text}}px; {% endif %}
							font-weight:{{block.settings.mobile_fw_text}}; 
                          }
                        }
					{% when 'hd' %}
						.wrapper_caption #b_{{id}}.slide_item_h3 {
                          text-transform:{{block.settings.text_transform}}; 
						  font-style: {{block.settings.font_style}};	
                          letter-spacing:{{block.settings.ls_text}}; 
                          {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                          font-size:{{block.settings.fs_text}}px; 
                          color:{{block.settings.color}}; 
						  font-weight:{{block.settings.fw_text}};
						}
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_h3{
								font-weight:{{block.settings.mobile_fw_text}};
								{% if block.settings.mobile_lh_text >0 %}line-height:{{block.settings.mobile_lh_text}}px; {% endif %}
								font-size:{{block.settings.mobile_font_text}}px; 
                          }
                        }
				  {% when 'txt' %}
						.wrapper_caption #b_{{id}}.slide_item_p{
							margin:0px; 
							letter-spacing:{{block.settings.ls_text}}px; 
							{% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
							font-size:{{block.settings.fs_text}}px; 
							color:{{block.settings.color}}; 
							font-weight:{{block.settings.fw_text}};
						}
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.slide_item_p{
								font-size:{{block.settings.mobile_font_text}}px;
								{% if block.settings.mobile_lh_text >0 %}line-height:{{block.settings.mobile_lh_text}}px; {% endif %}
								font-weight:{{block.settings.mobile_fw_text}};
                          }
							
                        }
				  {% when 'btn' %}
                        .wrapper_caption #b_{{id}}.buttons{
							margin:{{block.settings.mg}}; 
                          padding:{{block.settings.pd}}; 
                          background-color: {{block.settings.cl_bg}}; 
                          color:{{block.settings.cl_txt}}; 
                          font-size:{{block.settings.fs_text}}px; 
                          font-weight:{{block.settings.fw_text}};
                          border-radius:{{block.settings.br_button}};
                          text-transform:{{block.settings.button_transform}};
                          letter-spacing:{{block.settings.ls_text}}px;
                        } 
                        .wrapper_caption #b_{{block.id}}.buttons:hover{
                          background-color:{{block.settings.cl_bg_hover}}; 
                          color:{{block.settings.cl_txt_hover}} 
                        }
						@media (max-width: 1024px) {
                          .wrapper_caption #b_{{block.id}}.buttons{
                            margin:{{block.settings.mobile_mg}}; 
                            padding:{{block.settings.mobile_pd}};
                            font-size:{{block.settings.mobile_font_text}}px;		
                            font-weight:{{block.settings.mobile_fw_text}};
                          }	
                        }
				  {% when 'space' %}
					.wrapper_caption #b_{{block.id}}.slide_item_space{
						height:{{block.settings.sp}}px
					}
                    @media (max-width: 1024px) {
						.wrapper_caption #b_{{block.id}}.slide_item_space{
							height:{{block.settings.mobile_sp}}px
                        }
                    }
				{% when 'box' %}
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box h2{
						text-transform:{{block.settings.title_transform}}; 
                        letter-spacing:{{block.settings.ls_title}}; 
                        {% if block.settings.lh_title >0 %}line-height:{{block.settings.lh_title}}px; {% endif %} 
                        font-size:{{block.settings.fs_title}}px; 
                        color:{{block.settings.color}}; 
                        font-weight:{{block.settings.fw_title}};
                    }
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box  p{
                        text-transform:{{block.settings.contennt_transform}}; 
                        letter-spacing:{{block.settings.ls_text}}px; 
                        {% if block.settings.lh_text >0 %}line-height:{{block.settings.lh_text}}px; {% endif %} 
                        font-size:{{block.settings.fs_text}}px; 
                        color:{{block.settings.color_content}}; 
                        font-weight:{{block.settings.fw_text}};
                    }
					.wrapper_caption #b_{{block.id}}.slide_item_box .inside-box  a{
                        text-transform:{{block.settings.btn_transform}}; 
                        letter-spacing:{{block.settings.ls_btn}}px;  
                        font-size:{{block.settings.fs_text_btn}}px; 
                        background-color:{{block.settings.cl_bg_btn}}; 
                        color:{{block.settings.cl_btn}}; 
						font-weight:{{block.settings.fw_text_btn}};
					}
            {%endcase%}
			 
    	{%endfor%}
    {%- endif- %}
    @media (max-width: 1024px) {
        .hide_mobile{display:none;}
    }
{%- endcapture -%}

