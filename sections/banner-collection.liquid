          },
          {
            "group": "Landscape",
            "value": "ratio3_1",
            "label": "3:1"
          },
          {
            "group": "Landscape",
            "value": "ratio4_1",
            "label": "4:1"
          },
          {
            "group": "Landscape",
            "value": "ratio5_1",
            "label": "5:1"
          }
        ]
      }, 
