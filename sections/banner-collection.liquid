{% assign id = section.id  %}
{%assign sett_equal = section.settings.use_eq_height%}
{% assign image_ratio = section.settings.image_ratio %}
<section id="laber_{{id}}">
<div class="collection-hero ">
  <div class="collection-hero__inner">
    
      {%- if section.settings.show_collection_image and collection.image -%}
      {% assign image = collection.image %}
      {%- assign ratio = image.aspect_ratio -%}
      <div class="collection-hero__image-container media {%if sett_equal%}{{image_ratio}} {%endif%}">
        <div data-image-effect class="pr_lazy_img main-img lazyload laber_bg_lz laber_img_1 " data-id="{{image.id}}" data-bgset="{{ image | img_url: '1x1' }}" data-parent-fit="width" data-wiis data-ratio="{{ratio}}" data-sizes="auto" style="padding-top:{{ 1 | divided_by: ratio | times: 100}}%;"></div>
      </div>
      {%- endif -%}
    {%if section.settings.show_name_collection or section.settings.show_collection_description%}
    <div class="collection-hero__content">
      {%if section.settings.show_name_collection%}
      <h1 class="collection-name">
        {{- collection.title | escape -}}
      </h1>
      {%- endif -%}
      {%- if section.settings.show_collection_description -%}
        <div class="collection-description rte">{{ collection.description }}</div>
      {%- endif -%}
    </div>
	{%- endif -%}

  </div>
</div>
</section>
{%- render 'section_style' -%}
{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
    "type": "checkbox",
    "id": "show_name_collection",
    "default": false,
    "label": "show name collection"
    },
    {
