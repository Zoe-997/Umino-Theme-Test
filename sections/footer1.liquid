{% assign sid = section.id %}
<section
  id="laber_{{sid}}">
  {% render 'footer_1' %}
</section>
<section
  class="bottom_footer">
  <div
    class="container">
    <div
      class="d-flex flex-wrap inner_bottom_footer">
      {% if section.settings.show_language or section.settings.show_currency %}
        <ul
          class="menu-language parent-list">
          {% if section.settings.show_language %}
            {% render 'language' %}
          {% endif %}
          {% if section.settings.show_currency %}
            {% render 'currency' %}
          {% endif %}
        </ul>
      {% endif %}
      {% if section.settings.copyright != blank %}
        <div
          class="copyright">
          <p
            class="text_center">{{ section.settings.copyright }}</p>
        </div>
      {% endif %}
      {% if section.settings.payment_image %}
        <div
          class="payment-image text_right">{{ section.settings.payment_image | image_url: width: 331 | image_tag }}</div>
      {% endif %}
    </div>
  </div>
</section>
{%- render 'section_style' -%}

{% style %}
  .main-footer a,
  .bottom_footer a {
    color: {{ section.settings.cl_link }};
  }

  .main-footer a:hover,
  .bottom_footer a:hover {
    color: {{ section.settings.cl_link_hover }};
  }
{% endstyle %}

