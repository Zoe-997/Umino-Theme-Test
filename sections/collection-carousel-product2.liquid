{% liquid
  assign sid = section.id 
  assign sett_equal = section.settings.use_eq_height
  assign image_ratio = section.settings.image_ratio
  assign layout_des = section.settings.layout_des
%}
{%- for i in (1..1) -%}  
<section id="laber_{{sid}}">
  <div class="laber_product_section_{{sid}}">
    <div class="{%if layout_des%}full-width{% else %}container{%endif%}">
      {% if section.settings.title != blank %}
      <div class="wrap_title {{ section.settings.text_size }} {{section.settings.style_title}}">
        {% if section.settings.sub_title!= blank %}
        <h4 class="section-subtitle">{{section.settings.sub_title}}</h4>
        {% endif %}
        <h3 class="section-title">{{section.settings.title}}</h3>  
        {% if section.settings.content!= blank %}
        <div class="content">{{section.settings.content}}</div>
        {% endif %}
      </div>
      {% endif %}
    <div class="row">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
           {%- when 'banner' -%}
                {% liquid
                  assign url = block.settings.url 
                  assign open_link = block.settings.open_link 
                %}
            <div id="bk_{{ block.id}}" class="col-lg-{{ block.settings.cl}} col-md-{{ block.settings.cl_tb}} col-sm-{{ block.settings.cl_mb}} col-xs-12">

                {% if block.settings.title != blank %}
                <div class="wrap_title style_2">
                  <h3 class="block-title">{{ block.settings.title}}</h3>  
                  {% if block.settings.content!= blank %}
                  <div class="content">{{ block.settings.content}}</div>
                  {% endif %}
                  {%if block.settings.text_btn %}
                    <div class="bn_button viewall"><a href="{{ url | default:'/admin/collections' }}" target="{{open_link}}"">{{ block.settings.text_btn}}</a></div>
                  {%endif%}
                </div>
                {% endif %}
                
                <div class="image_card w-full">
                  {% assign image = block.settings.image %}
                  {% if image != blank %} 
                      {% render 'responsive-image', image: image, url: url, image_class: 'w-full h-full' %}
                  {% else %}
                      <div class="image-card__img ">
                          {% capture current %}{% cycle 1, 2, 3, 4, 5 %}{% endcapture %}
                          {{ 'collection-' | append: current | placeholder_svg_tag: 'placeholder-svg w-full h-full' }}
                      </div>
                  {% endif %}
                </div>
            </div>
            {% render 'block-style', block: block %}
           {%- when 'collection' -%}
            {% liquid
              assign collection = block.settings.collection 
              assign arrows =  block.settings.arrows
              assign dots =  block.settings.dots
              assign bid =  block.id
              assign padding = block.settings.padding
            %}
            <div id="bk_{{bid}}" class="col-lg-{{ block.settings.cl}} col-md-{{ block.settings.cl_tb}} col-sm-{{ block.settings.cl_mb}} col-xs-12">
               <div class="products-arrivals ">
                  <div class="section-content">
                    {% include 'grid-slider', settings:block.settings %} 
                    <div class="content_section slick-carousel">
                      <div class="grid-slider laber-slick-carousel {%if sett_equal%}{{image_ratio}} {%endif%}" {{gridSlider}} data-append-Arrows=".arrows_{{bid}}" data-append-Dots=".dots_{{bid}}" > 
                        {%- if collection  != blank -%} 
                          {%- assign products = collections[collection].products -%}
                          {%- capture url_cat -%}{% if collection %}/collections/{{collections[collection].handle}}{% endif %}{%- endcapture -%}
                          {%- for product in products limit: block.settings.max_count -%}
        
                          {% assign pr_hd = product.handle %}
                          <div data-lazy-product-load class="productLazyload lazyload" data-include="{{url_cat}}/products/{{pr_hd}}/?view=pr_lazy_load">                      
                          </div>
                          {%- endfor -%}  
        				{%- else -%}
                          {%- for i in (1..16) -%}
                          <div class="pr_grid_item">
                            {% include 'product_demo' %} 
                          </div>
                          {%- endfor -%}
                        {%- endif -%}
                      </div>
                      
                      {%if dots %}
                      <div class="laber_append_dots dots_{{bid}}"></div>
                      {%endif%}
                      {%if arrows%}	
                      <div class="laber_append_arrows arrows_{{bid}}"></div>	
                      {% endif %}
                    </div>
                  </div>
            </div>
            </div>
            {% style %}
              #bk_{{bid}} .alo-item{
                padding-bottom:{{padding | plus: padding}}px; 
              }
            {% endstyle %}
      {%- endcase -%}  
    {%- endfor -%}
    </div>
