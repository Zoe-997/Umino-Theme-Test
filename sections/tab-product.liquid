{%- liquid
  assign sid = section.id
  assign section_blocks = section.blocks  
  assign layout = section.settings.layout
  assign arr_col = section_blocks | where: "type", "col"    
  assign autoplay =  section.settings.autoplay
  assign arrows =  section.settings.arrows
  assign dots =  section.settings.dots
  
  assign sett_equal = section.settings.use_eq_height
    assign image_ratio = section.settings.image_ratio
    
    assign padding = section.settings.padding
    
  -%}
  
{%- for i in (1..1) -%}
<section id="laber_{{sid}}" class="laber_se_{{sid}}">
  <div class="container {%if layout == 'full-width' %}{{layout}}{%endif%}" >
        {%- if arr_col.size > 0 -%} 
        <div class="tabcontent tabcontent_style1">
          <div class="tab-products" data-sorting-collections-control="">
            <div class="display-mobile section_heading">
              <span>{{'sections.tab.you_are_in' | t}}	</span>
              <div class="js_sr_txt"></div>
            </div>
            <ul>
              {% assign index = 1 %}
              {%- for block in arr_col -%}
                {%- assign coll_name = collections[block.settings.collection].title   -%}
                <li>
                    <a href="{{ collections[block.settings.collection].url }}"{% if section.blocks.size > 1 %}{% if forloop.index == 1 %} class="active"{% endif %}{% endif %} data-collection="{{ collections[block.settings.collection].handle }}">
                      {% if block.settings.title != blank %}
                      	<span>{{ block.settings.title}}</span>
                      {% else %}
                      	<span> {% if coll_name !=blank %}{{ coll_name }}{% else %}Tab Title {{ index }}{% endif %}</span>
                      {% endif %}
                    </a>
               </li>
               {% assign index = index | plus: 1 %}
              {%- endfor -%}
            </ul>
          </div>
          {%if section.settings.show_view_all %}
          <div class="laber-view-all no-mobile">
            <a href="{{ routes.root_url }}collections/all">{{'collections.general.view_all' |t}}</a>
          </div>
          {%endif%}
        </div>
        {% endif %}
    
    <div class="products-arrivals">
      {%- if arr_col.size > 0 -%} 
            <div class="sorting-collections" data-sorting-collections-ajax>      
              <div class="ajax_load ">
                	<div class="circle-loadding"><span></span></div>
              </div>
              <div class="content_section slick-carousel">
                <div data-js-collection-tab class="js_container_cat"> 
                  {%capture grid %}padding-0-{{padding}}{%endcapture%}
                  {% include 'grid-slider', settings:section.settings %}
                  {%- for block in arr_col limit: 1 -%}
                  <div class="grid-slider laber-slick-carousel sorting-collections__products pr_center {%if sett_equal%}{{image_ratio}} {%endif%}" data-sorting-collections-items="true" 
                       data-limit="{{ section.settings.max_count }}"
                       data-grid="{{grid}}"
                       data-append-Arrows=".arrows_{{sid}}" data-append-Dots=".dots_{{sid}}"
                       {{gridSlider}} 
                       >  
                    {%- if block.settings.collection != blank -%}
                      {%- assign products = collections[block.settings.collection].products -%}
                      {%- capture url_cat -%}{% if collection %}/collections/{{collections[collection].handle}}{% endif %}{%- endcapture -%}
                      {%- for product in products limit: section.settings.max_count -%}
                      {% assign pr_hd = product.handle %}
                      <div data-lazy-product-load  class="productLazyload lazyload "  data-include="{{url_cat}}/products/{{pr_hd}}/?view=pr_lazy_load">                      

                      </div>
                      {%- endfor -%}
                    {%else%}
                      {%- for i in (1..16) -%}
                      <div class="pr_grid_item {{grid}}">
                        {% include 'product_demo' %} 
                      </div>
                      {%- endfor -%} 
                    {%- endif -%}
                  </div>

                  {%if dots %}
                  <div class="laber_append_dots dots_{{sid}}"></div>
                  {%endif%}
                  {%if arrows%}	
                  	<div class="laber_append_arrows arrows_{{sid}}"></div>	
                  {% endif %}

                  {%- endfor -%}

                </div>
              </div>
        
      {%- else -%}
      		{% render 'no-blocks' with message: 'homepage.onboarding.no_content' %}        
      {%- endif -%}
    </div>
  </div>
  </div>
</section>
{%- render 'section_style' -%}
{% style %}
  #laber_{{sid}} .grid-init .alo-item{
    padding-bottom:{{padding | plus: padding}}px; 
  }
{% endstyle %}
{%- endfor -%}



