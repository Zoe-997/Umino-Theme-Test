<link rel="preconnect" href=" {{ 'wishlist.css' | asset_url}}" crossorigin>
<link rel="preload" as="style" href="{{ 'wishlist.css' | asset_url}}">
{{ 'wishlist.css' | asset_url | stylesheet_tag }}
{% assign sid = section.id  %}
{% assign settings = section.settings %}
{% assign arrows =  section.settings.arrows %}
{% assign dots =  section.settings.dots %}
{%assign layout = section.settings.layout%}
{%assign sett_equal = section.settings.use_eq_height%}
{%assign image_ratio = section.settings.image_ratio%}
{% assign padding = section.settings.padding %}
<section id="laber_{{sid}}">
  <div class="container {%if layout%}full-width{%endif%}">   
    {% if section.settings.title != blank %}
    <div class="wrap_title">

      {% if section.settings.sub_title!= blank %}
      <h4 class="section-subtitle">{{section.settings.sub_title}}</h4>
      {% endif %}

      <h3 class="section-title">{{section.settings.title}}</h3>  

      {% if section.settings.content!= blank %}
      <div class="content">{{section.settings.content}}</div>
      {% endif %}

    </div>
    {% endif %}
      {% include 'grid-slider', settings:settings %} 
      <div class="content_section collection-wishlist">
        <div class="js-collection-wishlist row grid-slider-ajax {%if sett_equal%}{{image_ratio}} {%endif%}" {{gridSlider}}  data-view="pr_lazy_load"></div>
        <div class="collection-wishlist-empty" style="display:none">
          <div class="icon">
            <svg width="119" height="119" viewBox="0 0 119 119" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M26.0346 89.8707C13.6486 78.2693 3 61.7359 3 40.4386C3 23.1205 16.9553 9.10938 34.1613 9.10938C44.3615 9.10938 53.3849 14.0413 59.0455 21.6635C64.706 14.0413 73.7854 9.10938 83.9297 9.10938C90.3749 9.10938 96.3717 11.0707 101.36 14.4895" stroke="#D7DBE0" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M113.633 31.0229C114.586 33.9934 115.091 37.188 115.091 40.4946C115.091 79.7265 78.7732 102.873 62.52 108.478C60.6144 109.15 57.4759 109.15 55.5704 108.478C51.9274 107.245 47.3318 105.115 42.3438 102.145" stroke="#D7DBE0" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M115.091 3L3 115.091" stroke="#D7DBE0" stroke-width="6" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <p>{{ 'general.wishlist.empty' | t }}</p>
        </div>
      </div>
  </div>
</section>  
{%- render 'section_style' -%}
{% style %}
  #laber_{{sid}} .grid-init .alo-item{
    padding-bottom:{{padding | plus: padding}}px; 
  }
{% endstyle %}
