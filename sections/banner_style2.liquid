      			{%- render 'banner-item',block:se_blocks[1], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'banner-item',block:se_blocks[2], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
      			{%- render 'banner-item',block:se_blocks[3], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'banner-item',block:se_blocks[4], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     			{%- render 'banner-item',block:se_blocks[5], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=1880x820',ratio_demo:'43.617' ,ccol:'laber-col col-md-4 col-sm-12',for_i:1 -%}
     {%- endcase -%}
      
    </div>    
  </div>
</section>
{%- render 'section_style' -%}
{%- endfor -%}


