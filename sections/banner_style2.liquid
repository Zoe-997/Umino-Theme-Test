{% liquid
  assign sid = section.id 
  assign layout = section.settings.layout
  assign se_blocks = section.blocks
  assign se_size = se_blocks.size
%}
   
{%- for i in (1..1) -%}
{%- if section.settings.hidden %}{% break %}{% endif -%}
<section id="laber_{{sid}}">       
  <div class=" container {%if layout == 'full-width' %}{{layout}}{%endif%}">
    {% if section.settings.title != blank or section.settings.sub_title!= blank %}
    <div class="wrap_title col-lg-auto col-12">
      <div class="wrap_inner_title">
        {% if section.settings.title != blank %}
        <h3 class="section-title">{{section.settings.title}}</h3>  
        {% endif %}
        {% if section.settings.sub_title!= blank %}
        <span class="section-subtitle">{{section.settings.sub_title}}</span>
        {% endif %}
      </div>
    </div> 
    {% endif %} 
    <div class="row laber-row">
      {%- case se_size -%}
			{%- when 1 -%}
      			{%- render 'banner-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/1080x818.png?text=1080x818',ratio_demo:'16.7939%' ,ccol:'laber-col col-sm-12',for_i:1 -%}
			{%- when 2 -%}
      			{%- render 'banner-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400',ratio_demo:'57.803' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
      			{%- render 'banner-item',block:se_blocks[1,  cimg:'https://placehold.jp/100/f76b6a/fff/692x400.png?text=692x400',ratio_demo:'57.803' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}	
      		{%- when 3 -%}
      			{%- render 'banner-item',block:se_blocks[0], cimg:'https://placehold.jp/50/aec7cb/aec7cb/642x397.png?text=642x397',ratio_demo:'61.838' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:1 -%}
      			{%- render 'banner-item',block:se_blocks[1], cimg:'https://placehold.jp/50/ebc7bb/ebc7bb/475x475.png?text=475x475',ratio_demo:'100' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:2 -%}
     			{%- render 'banner-item',block:se_blocks[2], cimg:'https://placehold.jp/50/e8dabf/e8dabf/475x475.png?text=475x475',ratio_demo:'100' ,ccol:'laber-col col-lg-4 col-md-4 col-sm-12',for_i:3 -%}
      		{%- when 4 -%}
      			<div class="laber-col col-md-6 col-sm-12">
                  <div class="row laber-row">
      				{%- render 'banner-item',block:se_blocks[0], cimg:'https://placehold.jp/30/27282a/fff/695x500.png?text=695x500',ratio_demo:'500' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                  </div>
      			</div>
      			<div class="laber-col col-md-6 col-sm-12">
                  <div class="row laber-row">
                    {%- render 'banner-item',block:se_blocks[1], cimg:'https://placehold.jp/30/e29b03/fff/695x240.png?text=695x240',ratio_demo:'240' ,ccol:'laber-col col-sm-12',for_i:2 -%}
     			    {%- render 'banner-item',block:se_blocks[2], cimg:'https://placehold.jp/30/5db24a/fff/337x240.png?text=337x240',ratio_demo:'240' ,ccol:'laber-col col-md-6 col-sm-6',for_i:3 -%}
      			    {%- render 'banner-item',block:se_blocks[3], cimg:'https://placehold.jp/30/27282a/fff/337x240.png?text=337x240',ratio_demo:'240' ,ccol:'laber-col col-md-6 col-sm-6',for_i:4 -%}
                  </div>
      			</div>
      		{%- when 5 -%}
      			<div class="laber-col col-md-8 col-sm-12">
                  <div class="row laber-row">
                    {%- render 'banner-item',block:se_blocks[0], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=930x500',ratio_demo:'53.763' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                    {%- render 'banner-item',block:se_blocks[1], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
                    {%- render 'banner-item',block:se_blocks[2], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-md-6 col-sm-12',for_i:1 -%}
                  </div>
                </div>
      			<div class="laber-col col-md-4 col-sm-12">
                  <div class="row laber-row">
                    {%- render 'banner-item',block:se_blocks[3], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x185',ratio_demo:'41.111' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                    {%- render 'banner-item',block:se_blocks[4], cimg:'https://placehold.jp/100/f76b6a/fff/1880x820.png?text=450x500',ratio_demo:'111.111' ,ccol:'laber-col col-sm-12',for_i:1 -%}
                  </div>
      			</div>
            {%- when 6-%}
