{% liquid

  assign sid = section.id 
  assign sett_equal = section.settings.use_eq_height 
  assign ck = section.settings.use_eq_height
  
  assign url = section.settings.button_link
%}
   
{%- for i in (1..1) -%}
<section id="laber_{{sid}}" class="laber_product-countdown-banner_{{sid}}">
  <div class="laber_countdown_banner">
    <div class="container wrap-infor  h_{{section.settings.h_position}} v_{{section.settings.v_position}} text_{{section.settings.txt_align}}">    
      {%- assign image = section.settings.image -%}
      {%- assign url = section.settings.url -%}
      {%- assign url2 = section.settings.url2 -%}
        <div class="product_count_down col-xs-12 col-sm-12 col-md-7" >
          <div class="content-countdown">
              <div class="product-inner">
                	{% if section.settings.title != blank or section.settings.sub_title!= blank %}
                    <div class="wrap_title ">
                      {% if section.settings.title2 != blank %}
                      <h4 class="title2">{{section.settings.title2}}</h4>  
                      {% endif %}
                      {% if section.settings.title != blank %}
                      <h3 class="title1">{{section.settings.title}}</h3>  
                      {% endif %}
                      {% if section.settings.sub_title!= blank %}
                      <span class="subtitle">{{section.settings.sub_title}}</span>
                      {% endif %}
                    </div>
                    {% endif %}    
                	{% if section.settings.title_countdown != blank %}
               		 <p class="title_countdown h3">{{section.settings.title_countdown}}</p>
                	{% endif %}
                    {%- if section.settings.year_count_down != blank and section.settings.month_count_down != blank and section.settings.day_count_down != blank -%}
                    <div class="cms-countdown" data-y="{{section.settings.year_count_down}}" data-m="{{section.settings.month_count_down}}" data-d="{{section.settings.day_count_down}}" data-h="00" data-i="00" data-s="00"></div>                    	
                    {%- endif -%}
                	
                    <div class="laber_button">
                      	{% if section.settings.btn != blank %}
                    	<a class="button" href="{%- if url != blank -%}{{url}}{%- else -%}#{% endif %} " onMouseOver="this.style.backgroundColor='{{section.settings.bg_cl_hover}}'; this.style.color='{{section.settings.cl_btn_hover}}'" onMouseOut="this.style.backgroundColor='{{section.settings.bg_cl}}'; this.style.color='{{section.settings.cl_btn}}'"  style="color:{{section.settings.cl_btn}}; background-color:{{section.settings.bg_cl}};">{{ section.settings.btn}}</a>
                    	{%endif%}
                	</div>      
              </div>                   
          </div>
      </div>
    </div>
  </div>
</section>
{%- endfor -%}
{%- render 'section_style' -%} 
