{% liquid
  assign sid = section.id 
  assign sett_equal = section.settings.use_eq_height
  assign image_ratio = section.settings.image_ratio
  assign layout_des = section.settings.layout_des
  assign collection = section.settings.collection 
  assign arrows =  section.settings.arrows
  assign dots =  section.settings.dots
%}
{% assign padding = section.settings.padding %}   
{%- for i in (1..1) -%}  
<section id="laber_{{sid}}">
  <div class="laber_product_section_{{id}}">
    <div class="{%if layout_des%}full-width{% else %}container{%endif%}">
      {% if section.settings.title != blank %}
      <div class="wrap_title {{ section.settings.text_size }} {{section.settings.style_title}}">
        {% if section.settings.sub_title!= blank %}
        <h4 class="section-subtitle">{{section.settings.sub_title}}</h4>
        {% endif %}
        <h3 class="section-title">{{section.settings.title}}</h3>  
        {% if section.settings.content!= blank %}
        <div class="content">{{section.settings.content}}</div>
        {% endif %}
      </div>
      {% endif %}
    <div class="products-arrivals ">
          <div class="section-content">
            {% include 'grid-slider', settings:section.settings %} 
    <div class="content_section slick-carousel{% if section.settings.rows > 1 %} row-more{% endif  %}">
              <div class="grid-slider laber-slick-carousel {%if sett_equal%}{{image_ratio}} {%endif%}" {{gridSlider}} data-append-Arrows=".arrows_{{sid}}" data-append-Dots=".dots_{{sid}}" > 
                {%- if collection  != blank -%} 
                  {%- assign products = collections[collection].products -%}
                  {%- capture url_cat -%}{% if collection %}/collections/{{collections[collection].handle}}{% endif %}{%- endcapture -%}
                  {%- for product in products limit: section.settings.max_count -%}

                  {% assign pr_hd = product.handle %}
                  <div data-lazy-product-load class="productLazyload {% if products.size >= section.settings.max_count %}{{ grid }} {% else %} col-sm-12 {% endif %} lazyload" data-include="{{url_cat}}/products/{{pr_hd}}/?view=pr_lazy_load">                      

                  </div>
                  {%- endfor -%}  
				{%- else -%}
                  {%- for i in (1..16) -%}
                  <div class="pr_grid_item">
                    {% include 'product_demo' %} 
                  </div>
                  {%- endfor -%}
                {%- endif -%}
              </div>
              
              {%if dots %}
              <div class="laber_append_dots dots_{{sid}}"></div>
              {%endif%}
              {%if arrows%}	
              <div class="laber_append_arrows arrows_{{sid}}"></div>	
              {% endif %}
              {%if section.settings.show_view_all %}
                <div class="bn_button viewall text-center"><a href="{{ collections[collection].url | default:'/admin/collections' }}">{{'collections.general.shop_now' |t}}</a></div>
              {%endif%}
            </div>
          </div>
    </div>
  </div>
  </div>
</section>
{% style %}
  #laber_{{sid}} .grid-init .alo-item{
    padding-bottom:{{padding | plus: padding}}px; 
  }
{% endstyle %}
{%- endfor -%}
{%- render 'section_style' -%} 
